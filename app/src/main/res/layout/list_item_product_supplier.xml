<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="84dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/frameLayout"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="6dp"
            android:background="@drawable/actionbar_theme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/list_item_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/add_key"
                android:transitionName="circleImage"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/border_circle_image"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/list_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="60dp"
            android:transitionName="profileName"
            android:text="name"
            android:textColor="#636262"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frameLayout"
            android:fontFamily="@font/dinpro_medium"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/list_item_price"
            android:layout_width="146dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:text="price"
            android:textColor="#640c9f"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/list_item_name"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/list_item_name"
            app:layout_constraintTop_toBottomOf="@+id/list_item_name"
            app:layout_constraintVertical_bias="0.6"
            android:transitionName="profilePhone"
            android:fontFamily="@font/dinpro_condensedblack"
            />

        <TextView
            android:id="@+id/list_item_date"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="date"
            android:textColor="#663b8e"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/dinpro_condensedblack"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>