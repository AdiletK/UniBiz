<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/bg_for_new_client_dialog"
    >

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/clients_dialog_bg"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/quickview_prof_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_add_klient"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/dialog_quickview_title_txt"
        android:layout_below="@id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Adilet"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <com.google.android.material.button.MaterialButton
            android:layout_weight="1"
            android:id="@+id/quick_view_delete_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "Delete"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_weight="1"
            android:id="@+id/quick_view_more_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text = "More"
            android:layout_marginStart="10dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            />
    </LinearLayout>
</RelativeLayout>